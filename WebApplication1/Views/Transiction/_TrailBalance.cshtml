@model IEnumerable<WebApplication1.Models.ViewModels.TransictionTrailBalance>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Main content -->
<div class="invoice p-3 mb-3">
    <!-- title row -->
    <!-- info row -->
    <div class="row invoice-info">
        <!-- /.col -->
        <div class="col-sm-12 invoice-col text-center">
                <strong>Adjusted Trail Balance of @System.DateTime.Now.ToString("dd-MMM-yyyy")</strong>
        </div>
        <!-- /.col -->
        <div class="col-sm-4 invoice-col">
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
    <!-- Table row -->
    <div class="row">
        <div class="col-12 table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Code</th>
                        <th>Particular</th>
                        <th>Debit</th>
                        <th>Credit</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Code</td>
                            <td>@item.AccountTitle</td>
                            @if (item.Dr > 0)
                            {
                                <td>@item.Dr</td>
                            }
                            else
                            {
                                <td></td>
                            }
                            @if (item.Cr > 0)
                            {
                                <td>@item.Cr</td>
                            }
                            else
                            {
                                <td></td>
                            }
                        </tr>
                    }
                </tbody>
                <tfoot class="bg bg-cyan">
                    <tr>
                        <td colspan="2">Total debit must equal total credit</td>
                        <td>
                            @Model.Sum(X => X.Dr)
                        </td>
                        <td>
                            @Model.Sum(X => X.Cr)
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
    
    <!-- /.row -->
    <!-- this row will not appear when printing -->
    <div class="row no-print">
        <div class="col-12">
            <a href="invoice-print.html" rel="noopener" target="_blank" class="btn btn-default"><i class="fas fa-print"></i> Print</a>
            <button type="button" class="btn btn-success float-right">
                <i class="far fa-credit-card"></i> Submit
                Payment
            </button>
            <button type="button" class="btn btn-primary float-right" style="margin-right: 5px;">
                <i class="fas fa-download"></i> Generate PDF
            </button>
        </div>
    </div>
</div>
<!-- /.invoice -->

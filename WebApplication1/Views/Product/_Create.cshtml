@model WebApplication1.Models.ProductInfo

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- jquery validation -->
                <div class="card card-primary">
                    <div class="card-header">
                        @if (Model != null && Model.Name != null)
                        {
                            <h3 class="card-title">Update Product</h3>
                        }
                        else
                        {
                            <h3 class="card-title">Create New Product</h3>
                        }
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="card-body">
                            <div class="row">
                                <input asp-for="Id" type="hidden" />
                                <input asp-for="CreatedBy" type="hidden" />
                                <input asp-for="CreatedDate" type="hidden" />
                                <input asp-for="IsActive" type="hidden" />
                                <div class="col-lg-2 col-sm-6">
                                    <label asp-for="Name">Product Name</label>
                                </div>
                                <div class="col-lg-10 col-sm-6">
                                    <input type="text" name="Name" asp-for="Name" autocomplete="off" class="form-control text-capitalize" placeholder="Enter Product Name">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>

                                <div class="col-lg-2 col-sm-6 mt-1">
                                    <label asp-for="Name">Product Unit</label>
                                </div>
                                <div class="col-lg-10 col-sm-6 mt-1">
                                        <select class="custom-select rounded-0" id="UnitId" name="UnitId" asp-for="UnitId">
                                            @foreach (var unit in ViewBag.unitInformations)
                                            {
                                                <option value="@unit.Id">@unit.Name</option>
                                            }
                                        </select>
                                    <span asp-validation-for="UnitId" class="text-danger"></span>
                                </div>
                                <div class="col-lg-2 col-sm-6 mt-1">
                                    <label asp-for="Description">Product Description</label>
                                </div>
                                <div class="col-lg-10 col-sm-6 mt-1">
                                    <textarea name="Description" asp-for="Description" autocomplete="off" class="form-control text-capitalize" placeholder="Enter Product Description"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <input type="submit" value="Submit" class="btn btn-success" /> |
                            <a asp-action="Index">Back to List</a>
                        </div>
                    </form>
                </div>
                <!-- /.card -->
            </div>
            <!--/.col (left) -->
            <!-- right column -->
            <div class="col-md-6">
            </div>
            <!--/.col (right) -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>


@model IEnumerable<WebApplication1.Models.ProductInfo>

@{
    ViewData["Title"] = "Product";
}


<!-- /.row -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title text text-info">Product Information</h3>
                <div class="card-tools">
                    <div class="input-group input-group-sm">
                        <div class="input-group-append">
                            <a asp-controller="Product" asp-action="Create" class="btn btn-info">
                                <i class="fas fa-plus"></i> Add New
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-head-fixed text-nowrap" id="example1">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Unit</th>
                            <th>Description</th>
                            <th>Create By</th>
                            <th>Created Date</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.UnitInformations.Name</td>
                                <td>@item.Description</td>
                                <td>@item.UserInformation.FullName</td>
                                <td>@item.CreatedDate</td>
                                <td>@item.IsActive</td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { Id = item.Id }) |
                                    @Html.ActionLink("Details", "Details", new { Id = item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { Id = item.Id })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>
<!-- /.row -->

@section scripts{
    <script src="~/js/CustomeDataTable.js"></script>
}